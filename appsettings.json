{
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft.AspNetCore": "Error",
      "Microsoft.Hosting.Lifetime": "Error",
      "Microsoft.AspNetCore.Authorization": "Error",
      "Microsoft.EntityFrameworkCore.Database.Command": "Error"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Error",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
          "restrictedToMinimumLevel": "Error"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "ApplicationSettings": {
    "AppName": "Controllers Web API",
    "AppVersion": "1.0.0",
    "AppDescription": "Controllers Web API, NSwag, and API versioning.",
    "AppUrl": "https://example.com",
    "EnableRateLimiting": true,
    "EnableHealthCheck": false,
    "EnableApiCache": false,
    "EnableGenApiClient": false
  },
  "RateLimitSettings": {
    "FixedWindowLimiter": {
      "PermitLimit": 2,
      "Window": 5,
      "ReplenishmentPeriod": 10,
      "QueueLimit": 0,
      "SegmentsPerWindow": 8,
      "TokenLimit": 10,
      "TokenLimit2": 20,
      "TokensPerPeriod": 10,
      "AutoReplenishment": true
    },
    "TokenBucketLimiter": {
      "PermitLimit": 2,
      "Window": 5,
      "ReplenishmentPeriod": 10,
      "QueueLimit": 0,
      "SegmentsPerWindow": 8,
      "TokenLimit": 10,
      "TokenLimit2": 20,
      "TokensPerPeriod": 10,
      "AutoReplenishment": true
    }
  },
  "Swagger": {
    "Description": "Controllers Web API, NSwag, and API versioning.",
    "Title": "Controllers Web API",
    "TermsOfService": "https://example.com/terms",
    "Options": {
      "Deprecate_Version_Description": "This API version has been deprecated.",
      "Sunset_Policy_Description": " The API will be sunset on "
    },
    "License": {
      "Name": "MIT",
      "Url": "https://opensource.org/licenses/MIT"
    },
    "Contact": {
      "Name": "Iordanidis Chris",
      "Email": "info@datacenter.com",
      "Url": "https://opensource.org/licenses/MIT"
    }
  }
}
